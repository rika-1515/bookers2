    <tr>
      <td>name</td>
      <td><%=user.name %></td>
    </tr>

    <tr>
      <td>introduction</td>
      <td><%=user.introduction %></td>
    </tr>
</table>
  
<% if user==current_user %>
  <li>
    <%=link_to "プロフィール編集",edit_user_path(user) %>
  </li>
<% end %>




<h1>New book</h1>
  <%=form_with model:book do |f| %>
    <h4>Title</h4>
      <%=f.text_field:title %>
