<% if flash[:newb] %>
  <p id="notice"><%=flash[:newb] %></p>
<% end %>

<% if flash[:upb] %>
  <p id="notice"><%=flash[:upb] %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%=render 'users/user.newbook',user:@user,book:@book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
            <tr>
              <td><%=image_tag @book.user.get_profile_image(40,40) %></td>
              <td rouwspan="2"><%=@book.title %></td>
              <td rouwspan="2"><%=@book.body %></td>
              <% if @book.user==current_user %>
              <td rouwspan="2">
                  <%=link_to "Edit",edit_book_path(@book) %>
              </td>
              <td rouwspan="2">
                  <%=link_to "Destroy",book_path(@book),method: :delete %>
              </td>
              <% else %>
                <td rouwspan="2"></td>
                <td rouwspan="2"></td>
              <% end %>
            </tr>
            <tr>
              <td><%=@book.user.name %></td>
            </tr>
      </table>
    </div>
  </div>
</div>