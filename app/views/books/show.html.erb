<% if flash[:newb] %>
  <p id="notice"><%=flash[:newb] %></p>
<% end %>

<% if flash[:upb] %>
  <p id="notice"><%=flash[:upb] %></p>
<% end %>

<div class="container">
<div class="container px-5 px-sm-0">
  <div class="row">
    <%=render 'users/user.newbook',user:@user,book:@book_new %>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
      <table class="table">
            <tr>
              <td><%=image_tag @book.user.get_profile_image(100,100) %></td>
              <td rouwspan="2"><%=@book.title %></td>
              <td rouwspan="2"><%=@book.body %></td>
              <% if @book.user==current_user %>
              <td rouwspan="2">
                <%= link_to edit_book_path(@book) ,class:"btn btn-sm btn-success" do %>
                Edit
                <% end %>
              </td>
              <td rouwspan="2">
                <%= link_to book_path(@book),method: :delete , data: { confirm: '本当に消しますか？' }, class:"btn btn-sm btn-danger" do %>
                Destroy
                <% end %>

              </td>
              <% else %>
                <td rouwspan="2"></td>
                <td rouwspan="2"></td>
              <% end %>
            </tr>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%=@book.user.name %>
                <% end %>
              </td>
            </tr>
      </table>
    </div>
  </div>    
</div>      
</div>      