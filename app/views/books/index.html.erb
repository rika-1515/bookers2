<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%=image_tag book.user.get_profile_image(40,40) %></td>
          <td>
            <%=link_to book_path(book.id) do %>
              <%=book.title %>
            <% end %>
          </td>
          <td><%=book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



<h1>New book</h1>
  <%=form_with model:@book do |f| %>
    <h4>Title</h4>
      <%=f.text_field:title %>
    <h4>Opinion</h4>
      <%=f.text_area:body %>

    <div>
    <%=f.submit 'Create Book' %>
    </div>
  <% end %>


